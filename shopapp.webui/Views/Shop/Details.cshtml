@model ProductDetailModel

<div class="row mt-3">
    <div class="col-md-3">
        <img src="~/img/@Model.Product.ImageUrl" alt="" class="img-fluid">
    </div>
    <div class="col-md-9">
        <div class="card-body">
            <h3 class="mb-3">@Model.Product.Name</h3> <hr>
            
            @foreach (var item in Model.Categories)
            {
                <a asp-controller="Shop" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>
            }
            
            <div class="mb-3">
                <h4 class="text-primary mb-3"> <i class="fas fa-turkish-lira-sign">
                </i> @Model.Product.Price</h4>
                <form asp-controller="Cart" asp-action="AddToCart" method="POST" class="form-inline">
                    <input type="hidden" name="productId" value="@Model.Product.ProductId"/>
                    <div class="input-group mb-3">
                        <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" max="100" style="width: 100px;"/>
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-cart-plus"></i> Add to Cart
                            </button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 p-5">
        <p class="p-3">@Html.Raw(Model.Product.Description)</p>
    </div>
</div>