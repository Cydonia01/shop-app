@model ProductDetailModel

<div class="row">
    <div class="col-md-3">
        <img src="~/img/@Model.Product.ImageUrl" alt="" class="img-fluid">
    </div>
    <div class="col-md-9">
        <div class="card-body">
            <h1 class="mb-3">@Model.Product.Name</h1> <hr>
            
            @foreach (var item in Model.Categories)
            {
                <a asp-controller="Shop" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>
            }
            
            <div class="mb-3">
            <h4 class="text-primary mb-3"> <i class="fas fa-dollar-sign">
            </i> @Model.Product.Price</h4>
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Add To Cart</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 p-5">
        <p class="p-3">@Html.Raw(Model.Product.Description)</p>
    </div>
</div>