@model RegisterModel

<h1 class="h3 mt-3">Register</h1>
<hr>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="Register" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="FirstName" class="col-form-label">Name</label>
                    <div>
                        <input class="form-control" asp-for="FirstName">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="LastName" class="col-form-label">Surname</label>
                    <div>
                        <input class="form-control" asp-for="LastName">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="col-form-label">Username</label>
                <div>
                    <input class="form-control" asp-for="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="Password" class="col-form-label">Password</label>
                    <div>
                        <input class="form-control" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="RePassword" class="col-form-label">Confirm Password</label>
                    <div>
                        <input class="form-control" asp-for="RePassword">
                        <span asp-validation-for="RePassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-form-label"></label>
                <div>
                    <input class="form-control" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-4">
                    <label asp-for="City" class="col-form-label"></label>
                    <div>
                        <input class="form-control" asp-for="City">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-sm-4">
                    <label asp-for="Country" class="col-form-label">Country</label>
                    <div>
                        <input class="form-control" asp-for="Country">
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-sm-4">
                    <label asp-for="ZipCode" class="col-form-label">Zip Code</label>
                    <div>
                        <input class="form-control" asp-for="ZipCode">
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" value="Save Product" class="btn btn-primary">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"/></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"/></script>
}