@model Product

<div class="card mb-2">
    <img class="card-img-top" src="~/img/@Model.ImageUrl"></img>
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <small class="text-muted">
            <i class="fas fa-turkish-lira-sign">
                @Model.Price
            </i>
        </small>
    </div>
    <div class="card-footer text-center">
        <a asp-controller="shop" asp-action="Details" asp-route-url="@Model.Url" class="btn btn-primary btn-sm">Details</a>
        @if(User.Identity.IsAuthenticated) {
            <form asp-controller="Cart" asp-action="AddToCart" style="display: inline;" method="POST">
                <input type="hidden" name="productId" value="@Model.ProductId" />
                <input type="hidden" name="quantity" value="1" min="1" max="100"/>
                <button type="submit" class="btn btn-primary btn-sm">Add To Cart</button>
            </form>
        }
    </div>
</div>